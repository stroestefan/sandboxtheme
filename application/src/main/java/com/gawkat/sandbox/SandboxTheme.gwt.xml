<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
  "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to='SandboxTheme'>
  <!-- Inherit the core Web Toolkit stuff. -->
  <inherits name='com.google.gwt.user.User' />

  <!-- Other module inherits -->
  <inherits name='com.sencha.gxt.ui.GXT' />

  <!-- GXT Normalizing Stylesheet -->
  <stylesheet src="reset.css" />

  <!-- GXT Theme -->
  <!-- <inherits name='com.sencha.gxt.theme.blue.Blue'/> -->
  <!-- <inherits name='com.sencha.gxt.theme.gray.Gray' /> -->
  <!-- <inherits name="com.sencha.gxt.theme.neptune.Theme" /> -->
  <!-- <inherits name="com.sencha.gxt.theme.tritium.Theme" /> -->
  <inherits name="com.gawkat.sandbox.theme.tritium.Theme" />
  <inherits name="com.sencha.gxt.themebuilder.template.Css3"/>

  <replace-with class="com.gawkat.sandbox.client.CustomStoreFilterFieldAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.form.StoreFilterField.StoreFilterFieldAppearance" />
  </replace-with>

  <!-- Specify the app entry point class. -->
  <entry-point class='com.gawkat.sandbox.client.SandboxThemeEntryPoint' />

  <!-- Specify the paths for translatable code -->
  <source path='client' />
  <source path='shared' />
  
  <!-- Logging options -->
  <!-- <set-property name="gwt.logging.logLevel" value="INFO"/> -->
  <!-- <set-property name="gwt.logging.enabled" value="TRUE"/> -->  
  <!-- <set-property name="gxt.logging.enabled" value="true" />  -->
  
  <!-- Shrink the amount of permutations compiled -->
  <collapse-property name="gxt.device" values="phone, tablet" />
  <!-- <collapse-property name="gxt.theme" values="blue, gray" /> -->
  <collapse-property name="gxt.user.agent" values="air, safari*, chrome*, gecko*, ie11" />
  <collapse-property name="user.agent" values="safari*, gecko*" />
  <collapse-property name="gxt.user.agent" values="ie8, ie9, ie10" />
  <collapse-property name="user.agent" values="ie*" />
  
</module>
